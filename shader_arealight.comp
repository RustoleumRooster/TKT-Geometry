	src_normal = normalize(src_normal);
}


void main()
{
	uint ix = gl_LocalInvocationID.x;
	uint iy = gl_LocalInvocationID.y;
	//uint thread_id = iy * gl_WorkGroupSize.x + ix;

	if(gl_WorkGroupID.x * 3 < params.m_triangles_n_indices && ix == 0 && iy == 0)
	{
		//========================================================
		// Assign the vertex in order of increasing y in uv coords 
		// v0 = least y     v1 = greatest y     v2 = in between
		//
		// v0 -> v1 is the major axis
		// v0 -> v2 and v2 -> v1 are the minor axis
		//
		//					* v0
		//
		//				* v2
		//				          * v1

		i_0 = params.m_triangles_index_offset + gl_WorkGroupID.x*3;

		if(map_uvs[indexed(i_0)].y < map_uvs[indexed(i_0,1)].y)
			v_0 = 0;
		else
			v_0 = 1;

		if(map_uvs[indexed(i_0,v_0)].y < map_uvs[indexed(i_0,2)].y)
			v_0 = v_0;
		else
			v_0 = 2;

		if(map_uvs[indexed(i_0,((v_0+1)%3))].y > map_uvs[indexed(i_0,((v_0+2)%3))].y)
		{
			v_1 = (v_0+1)%3;
			v_2 = (v_0+2)%3;
		}
		else
		{
			v_1 = (v_0+2)%3;
			v_2 = (v_0+1)%3;
		}

		v_0 = indexed(i_0,v_0);
		v_1 = indexed(i_0,v_1);
		v_2 = indexed(i_0,v_2);

		w0 = vec2(floor_x_value(map_uvs[v_0].x),floor_y_value(map_uvs[v_0].y));
		w1 = vec2(floor_x_value(map_uvs[v_1].x),floor_y_value(map_uvs[v_1].y));
		w2 = vec2(floor_x_value(map_uvs[v_2].x),floor_y_value(map_uvs[v_2].y));

		m0 = (w1.x - w0.x) / (w1.y - w0.y);
		m1 = (w2.x - w0.x) / (w2.y - w0.y);
		m2 = (w1.x - w2.x) / (w1.y - w2.y);

		b0=false;
		b1=false;

		if(map_uvs[v_2].y > map_uvs[v_0].y+0.0001)
			b0 = true;

		if(map_uvs[v_1].y > map_uvs[v_2].y+0.0001)
			b1 = true;

		bNegativeX = false;

		if(MajorX(w2.y) > w2.x)
			bNegativeX = true;
		

		//==================================================
		// Build a matrix to convert from UV to world coords
		//

		vec3 V4 = vec3(w0,0) + cross( vec3(w1,0) - vec3(w0,0), vec3(w2,0) - vec3(w0,0));

		mat4 T1 = mat4(	vec4(w0,0,1),
						vec4(w1,0,1),
						vec4(w2,0,1),
						vec4(V4,1));

		V4 = global_vertices[v_0] + cross(global_vertices[v_1] - global_vertices[v_0], global_vertices[v_2] - global_vertices[v_0]);

		mat4 T2 = mat4( vec4(global_vertices[v_0],1),
						vec4(global_vertices[v_1],1),
						vec4(global_vertices[v_2],1),
						vec4(V4,1));

		T1 = inverse(T1);

		uv2worldMat = T2 * T1;

		
		Normal = cross(global_vertices[indexed(i_0,1)] - global_vertices[indexed(i_0,0)], global_vertices[indexed(i_0,2)] - global_vertices[indexed(i_0,1)]);
		Normal = normalize(Normal);

		vec3 upvec;

		if(dot(Normal,vec3(0,0,1)) > 0.999 || dot(Normal,vec3(0,0,-1)) > 0.999)
		{
			upvec = vec3(0.5, 0, 1.0);
			upvec = normalize(upvec);
		}
		else
			upvec = vec3(0, 0, 1);
		
		Tan = cross(Normal,upvec);
		Bitan = cross(Normal,Tan);

		//=============================
		// Edges
		//

		edges[0] = global_edges[i_0+0];
		edges[1] = global_edges[i_0+1];
		edges[2] = global_edges[i_0+2];

		if(edges[0] != 0xFFFF)
		{
			uint t0 = global_edges[i_0+0] * 3;
			EdgeNormal0 = cross(global_vertices[indexed(t0,1)] - global_vertices[indexed(t0,0)], global_vertices[indexed(t0,2)] - global_vertices[indexed(t0,1)]);
		}

		if(edges[1] != 0xFFFF)
		{
			uint t0 = global_edges[i_0+1] * 3;
			EdgeNormal1 = cross(global_vertices[indexed(t0,1)] - global_vertices[indexed(t0,0)], global_vertices[indexed(t0,2)] - global_vertices[indexed(t0,1)]);
		}

		if(edges[2] != 0xFFFF)
		{
			uint t0 = global_edges[i_0+2] * 3;
			EdgeNormal2 = cross(global_vertices[indexed(t0,1)] - global_vertices[indexed(t0,0)], global_vertices[indexed(t0,2)] - global_vertices[indexed(t0,1)]);
		}
	}

	uint rand_state = ((iy) * 32 ) + ix;
	float ystep = 1.0 / params.lm_height;

	int i;
	
	//========================================================
	// Main loop
	//

	barrier();

	if(ix == 0 && iy == 0)
	{
		y0 = w0.y;
		
	}

	barrier();
		
	while(y0 < w1.y + 0.001)
	{

		barrier();

		if(ix == 0 && iy == 0)
		{
			if(bNegativeX==false)
				{
						x0 = uint(params.lm_width * MajorX(y0));
						x1 = uint(params.lm_width * MinorX(y0));
				}
			else
				{
						x0 = uint(params.lm_width * MinorX(y0));
						x1 = uint(params.lm_width * MajorX(y0));
				}
		}

		barrier();

		int i=0;


		while(x0 + i <= x1)
		{
			
			ivec2 ipos = ivec2(x0 + i, uint(params.lm_height * y0));
			vec3 pos = uv_to_vec3( vec2( (float(ipos.x)+0.5) / params.lm_width, (float(ipos.y)+0.5) / params.lm_height) );

			//Test Code
			//if(ipos == vec2(floor(params.in_coords.x * params.lm_width),floor(params.in_coords.y * params.lm_height)))
			{
				barrier();

				if(ix == 0 && iy == 0)
				{
					for(int j=0;j<8;j++)
						shared_total[j] = 0;

					light_i = 0;
					light_distance = 0;
					ray_count = 0;
					vec3 pos2 = uv_to_vec3( vec2( (float(ipos.x)) / params.lm_width, (float(ipos.y)) / params.lm_height) );

					point_type = 0;

					//====================================
					// If no corner of the texel is off of the triangle we can treat it differently (faster)
					//

					if(is_point_on_triangle(pos2))
					{
						pos2 = uv_to_vec3( vec2( (float(ipos.x) + 1.0) / params.lm_width, (float(ipos.y)) / params.lm_height) );
						if(is_point_on_triangle(pos2))
						{
							pos2 = uv_to_vec3( vec2( (float(ipos.x)) / params.lm_width, (float(ipos.y) + 1.0) / params.lm_height) );
							if(is_point_on_triangle(pos2))
							{
								pos2 = uv_to_vec3( vec2( (float(ipos.x) + 1.0) / params.lm_width, (float(ipos.y) + 1.0) / params.lm_height) );
								if(is_point_on_triangle(pos2))
								{
									point_type = 1;
								}
							}
						}
					}
				}
				
				barrier();

				bool valid_pos = point_type == 1;
				float subgroup_total;

				//====================================
				// Randomly select a point
				//

				uint[2] V = tea(uint[2](rand_state,0));

				float e0 = random_to_float01(V[0]);
				float e1 = random_to_float01(V[1]);

				rand_state = V[1];

				pos = uv_to_vec3( vec2( (float(ipos.x)+e0) / params.lm_width, (float(ipos.y)+e1) / params.lm_height) );

				if( !valid_pos)
				{
					int k=0;
					valid_pos = is_point_on_triangle(pos);

					while(!valid_pos && k < 8)
					{
						V = tea(uint[2](rand_state,0));
						e0 = random_to_float01(V[0]);
						e1 = random_to_float01(V[1]);
						rand_state = V[1];
						pos = uv_to_vec3( vec2( (float(ipos.x)+e0) / params.lm_width, (float(ipos.y)+e1) / params.lm_height) );
						valid_pos = is_point_on_triangle(pos);
						k++;
					}
				}

				subgroupBarrier();

				subgroup_total = subgroupAdd( valid_pos ? 1 : 0 );

				subgroupBarrier();

				if(subgroupElect())
				{
					atomicAdd(ray_count,subgroup_total);
				}

				barrier();

				subgroup_total = 0;

				//========================================================
				// Loop over each light source
				//
				
				while(light_i < params.n_lights && light_i < 8)
				{
					uint light_idx;

					barrier();

					if(ix == 0 && iy == 0)
					{
						light_distance = get_next_light(light_distance, pos, light_id);
					}

					barrier();

					light_idx = global_light_indices[light_id*2];

					subgroup_total=0;

					if(ix == 0 && iy == 0)
					{
						do_precalculations(light_id*2,pos);

						shared_bool = (dot(Normal,global_vertices[global_indices[light_idx*3]] - pos) > 0.0 || 
								dot(Normal,global_vertices[global_indices[light_idx*3 + 1]] - pos) > 0.0 ||
								dot(Normal,global_vertices[global_indices[light_idx*3 + 2]] - pos) > 0.0 );
					}

					barrier();

					if(shared_bool)
					{
						vec3 ray = normalize(rand_triangle_point(ix + 32*iy) - pos);

						if(true)
						{
							
							uint hit_id;

							float d = trace_scene_hit(pos,ray,hit_id);

							bool isHit = false;

							if(hit_id == light_idx && ((dot(ray,Normal) > 0) && 
							((point_type == 1) ||
							(is_on_edge(pos,1,0) && (dot(ray,EdgeNormal0) > 0) || edges[0] == 0xFFFF) ||
							(is_on_edge(pos,1,2) && (dot(ray,EdgeNormal1) > 0) || edges[1] == 0xFFFF) ||
							(is_on_edge(pos,2,0) && (dot(ray,EdgeNormal2) > 0) || edges[2] == 0xFFFF) )))
							{
								isHit = true;
							}

							//Testing Code
							if(ipos == vec2(floor(params.in_coords.x * params.lm_width),floor(params.in_coords.y * params.lm_height)) && valid_pos )
							{
								//hits[0].x = ray_count;
								//hits[ix+32*iy] = pos;
								//hits[ix+32*iy+256] = pos + ray * d;
							}

							subgroupBarrier();

							//float p = 100000.0 * dot(-ray,src_normal)  * dot(ray,Normal) / (d*d);
							float p =  dot(-ray,src_normal) * dot(-ray,src_normal) * dot(-ray,src_normal) * dot(ray,Normal) / (d*d);


							//============================================
							// Add up the contribution from each thread in the subgroup
							//
							subgroup_total = subgroupAdd( isHit && valid_pos ? p : 0 );
							subgroup_total *= 0.1 * global_light_indices[light_id*2+1];

						}
					
						subgroupBarrier();

						//============================================
						// Add up the contribution from all the subgroups
						//

						if(subgroupElect())
						{
							atomicAdd(shared_total[light_i],subgroup_total);
						}

						barrier();

					}//if shared_bool

					barrier();

					if(ix == 0 && iy == 0)
					{
						light_i += 1;

						
					}

					barrier();


				}// per light source
			
				barrier();

				if(ix == 0 && iy == 0)
				{
					float p = 0;

					//============================================
					// Add up the contributions from each light source
					//

					for(int j=0;j<8;j++)
					{
						p += shared_total[j];
					}

					//Test Code
					//if(ipos == vec2(floor(params.in_coords.x * params.lm_width),floor(params.in_coords.y * params.lm_height)))
					{
						//hits[0].y = p;
					}

					p = p / (ray_count * params.n_lights);

					//Test Code
					//if(ipos == vec2(floor(params.in_coords.x * params.lm_width),floor(params.in_coords.y * params.lm_height)))
					{
						//hits[0].z = p;
					}

					if(ray_count > 32 )
						imageStore(imageOut,ipos,vec4(p,1,p,1));					

				}// if(ipos == vec2(floor(params.in_c...

				barrier();
			}

			i++;

		} //while(x0 + i <= x1)
			
		barrier();

		if(ix == 0 && iy == 0)
		{
			y0 += (ystep);
		}

		barrier();
	} // main loop
		
	return;
