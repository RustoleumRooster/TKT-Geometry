}

vec3 rand_triangle_point(uint n)
{
	double g = 1.32471795724474602596;
	double a1 = 1.0/g;
	double a2 = 1.0/(g*g);

	float u = float(fract(0.5+a1*n));
	float v = float(fract(0.5+a2*n));

	vec3 P;

	vec3 A = src_vert[0];
	vec3 B = src_vert[1];
	vec3 C = src_vert[2];

	if(u+v < 1)
	{
		P = A + (C - A) * u + (B - A) * v;
	}
	else
	{
		P = A + (C - A) * (1.0 - u) + (B - A) * (1.0 - v);
	}

	return P;
}

