namespace reflect {

void TypeDescriptor_MultiOption::dump(const void* obj, int indentLevel) const
{
    int i = *(const int*)obj;

    std::cout<<name<<" {";
    if(i<labels.size())
        std::cout<<labels[i];
    else std::cout<<"out of range";
    std::cout<<"}";
}

