bool is_point_on_triangle(vec3 p)
{
	vec3 AB = global_vertices[v_1] - global_vertices[v_0];
	vec3 BC = global_vertices[v_2] - global_vertices[v_1];
	vec3 CA = global_vertices[v_0] - global_vertices[v_2];
	vec3 AC = global_vertices[v_2] - global_vertices[v_0];

	float a = 0.5 * length(cross(AB,AC));
	float aa = 0;

	vec3 AP = p - global_vertices[v_0];
	aa += 0.5 * length(cross(AB,AP));

	AP = p - global_vertices[v_1];
	aa += 0.5 * length(cross(BC,AP));

	AP = p - global_vertices[v_2];
	aa += 0.5 * length(cross(CA,AP));

	if(abs(aa - a) < 0.001)
		return true;

	return false;
}

