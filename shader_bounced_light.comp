bool barycentric(inout vec3 p, vec3 a, vec3 b, vec3 c)
{
    vec3 v0 = b - a;
    vec3 v1 = c - a;
    vec3 v2 = p - a;
    float d00 = dot(v0,v0);
    float d01 = dot(v0,v1);
    float d11 = dot(v1,v1);
    float d20 = dot(v2,v0);
    float d21 = dot(v2,v1);
    float denom = d00 * d11 - d01 * d01;
    p.y = (d11 * d20 - d01 * d21) / denom;
    p.z = (d00 * d21 - d01 * d20) / denom;
    p.x = 1.0f - p.y - p.z;

    p.x = abs(p.x) < 0.001 ? 0.0 : p.x;
    p.y = abs(p.y) < 0.001 ? 0.0 : p.y;
    p.z = abs(p.z) < 0.001 ? 0.0 : p.z;

    if (p.x < 0 || p.y < 0 || p.z < 0)
        return false;

    return true;
}
	
